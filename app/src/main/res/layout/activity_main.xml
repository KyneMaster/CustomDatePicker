<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c9c3c3">

    <Button
        android:id="@+id/systomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统日期选择器"/>

    <TextView
        android:id="@+id/systomTx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fcfbfb"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/customBtn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义日期选择器1号"
        />
    <TextView
        android:id="@+id/customTx_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fcfbfb"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/customBtn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义日期选择器1号"
        />
    <TextView
        android:id="@+id/customTx_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fcfbfb"
        android:gravity="center_vertical"/>
</LinearLayout>  